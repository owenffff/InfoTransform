{
  "name": "infotransform",
  "version": "1.0.0",
  "description": "Transform any file type into structured, actionable data using AI-powered analysis.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "build:css:legacy": "tailwindcss -i ./frontend-legacy/src/css/input.css -o ./frontend-legacy/dist/css/style.css --minify",
    "watch:css:legacy": "tailwindcss -i ./frontend-legacy/src/css/input.css -o ./frontend-legacy/dist/css/style.css --watch",
    "build:js:legacy": "esbuild frontend-legacy/src/js/main.js --bundle --minify --outfile=frontend-legacy/dist/js/script.js",
    "watch:js:legacy": "esbuild frontend-legacy/src/js/main.js --bundle --outfile=frontend-legacy/dist/js/script.js --watch",
    "build:legacy": "npm run build:css:legacy && npm run build:js:legacy",
    "dev:legacy": "concurrently \"npm run watch:css:legacy\" \"npm run watch:js:legacy\" \"npm run python:app\"",
    "python:app": "uv run python app.py",
    "build:next": "cd frontend && npm run build",
    "dev:next": "dotenv -- npm run dev:next:start",
    "dev:next:start": "cd frontend && npm run dev",
    "dev:frontend": "npm run dev:next",
    "dev:api": "dotenv -- npm run python:app",
    "dev": "dotenv -- concurrently -k --kill-others-on-fail --names \"next,api\" \"npm run dev:next\" \"npm run dev:api\"",
    "build": "npm run build:next",
    "clean": "node -e \"const fs=require('fs'); const path=require('path'); const dirs=['frontend/.next','frontend/out','frontend-legacy/dist']; dirs.forEach(d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch(e){}});\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owenffff/InfoTransform.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/owenffff/InfoTransform/issues"
  },
  "homepage": "https://github.com/owenffff/InfoTransform#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "esbuild": "^0.25.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
